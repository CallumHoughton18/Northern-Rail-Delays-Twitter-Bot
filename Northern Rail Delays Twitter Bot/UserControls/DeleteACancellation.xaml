<Window x:Class="Northern_Rail_Delays_Twitter_Bot.UserControls.DeleteACancellation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Northern_Rail_Delays_Twitter_Bot.UserControls"
        mc:Ignorable="d"
        Title="Delete_a_Cancellation" Height="300" Width="400"
        Background="AliceBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Select how many cancellations to delete: " Grid.Row="1" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow"/>
        <ComboBox x:Name="CancelNums" Grid.Column="1" Grid.Row="1" Margin="10,30">
        </ComboBox>
        <Button x:Name="SaveBtn" Grid.Column="1" Grid.Row="3" Margin="32" Content="Delete Cancellations" Click="SaveBtn_Click"/>
    </Grid>
</Window>
